@using System.Net 
@using TobyBlazor.Other

<div style="margin-top:25px;">
    <div class="list-group list-group-horizontal">
        @foreach (var video in Videos)
        {
            <span class="list-group-item">
                <button @key=video type="button" @onclick="@(() => VideoSelected(video))" class="list-group-item list-group-item-action d-flex justify-content-lg-start align-items-center @(SelectedVideo != null && video.YTId == SelectedVideo.YTId ? "active" : "")" title=@WebUtility.HtmlDecode(@video.Title)>
                    <img class="mr-3" src="@HelperExtensions.GetDefaultVideoThumbnail(video.YTId)" />
                </button>
            </span>
        }
    </div>
</div>